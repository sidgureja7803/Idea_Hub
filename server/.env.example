# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/startup-buddy

# Redis Connection (for BullMQ and Cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Keys - Required
CEREBRAS_API_KEY=your_cerebras_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# API Keys - Optional
GEMINI_API_KEY=your_gemini_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here
QLOO_API_KEY=your_qloo_api_key_here

# Feature Flags
ENABLE_TAVILY=false

# Research Configuration
RESEARCH_CACHE_TTL=259200
RESEARCH_MAX_DOCUMENTS=20
RESEARCH_FETCH_TIMEOUT=30000

# Rate Limits (requests per minute)
CEREBRAS_RATE_LIMIT=30
PERPLEXITY_RATE_LIMIT=10
TAVILY_RATE_LIMIT=10
FETCH_RATE_LIMIT=20

# Processing Configuration
LEGACY_PROCESSING=false

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# Appwrite Configuration
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your_project_id
APPWRITE_API_KEY=your_api_key
APPWRITE_DATABASE_ID=your_database_id
